@model List<project.Models.Recipe>

@section Styles {
    <link rel="stylesheet" href="~/css/saved.css"/>
}

<h2>Ваші збережені рецепти</h2>

@if (!Model.Any())
{
    <p>У вас ще немає збереженних рецептів</p>
}
else
{
    <div class="recipes-list">
        @foreach (var recipe in Model)
        {
            <div class="recipe-card">
                @if (!string.IsNullOrEmpty(recipe.Photo))
                {
                    <img src="@recipe.Photo" 
                         alt="@recipe.recipe_name" style="width:200px; height:150px;" />
                }
                else
                {
                    <img src="/images/default.jpg" alt="Без зображення" style="width:200px; height:150px;" />
                }

                @* recipe с маленькой потому что обращаемся к объекту класса *@
                <h3>@recipe.recipe_name</h3>
                <p>@recipe.Category</p>

                <form asp-action="Remove" asp-controller="Saved" method="post">
                    <input type="hidden" name="recipeId" value="@recipe.recipeID" />
                    <button type="submit">Видалити</button>
                </form>
            </div>
        }
    </div>
}
